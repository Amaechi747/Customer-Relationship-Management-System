<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
  <title>CRM By Moses |<%= title %></title>
<body>
  <%- include('./partials/navbar.ejs') %>
  <div class="container-fluid">
      <div class="col text-center py-3">
        <h1><%= data.fullname%></h1>
      </div>
      <div class="row g-6">
        <div class="col-6 offset-3 border-secondary shadow py-3 px-5 rounded">
          <form class="form_container" method="get" action="/users/update/<%=data.id%>" enctype="application/x-www-form-urlencoded">

            <div class="card text-center">
                <div class="card-header">
                  Administrative Panel
                </div>
                <div class="card-body">
                  <h5 class="card-title">Email: <%= data.email%></h5>
                  <p class="card-text">Gender: <%= data.gender%></p>
                  <p class="card-text">Phone No: <%= data.phone%></p>
                  <p class="card-text">Address: <%= data.address%></p>
                  <p class="card-text">Notes: <%= data.notes%></p>
                  <div class="form-group mb-3">
                    <div class="text-center">
                      <input type="submit" class="btn btn-primary" id="submit" value="Update" >
                    </div>
                  </div>
                </div>
                <div class="card-footer text-muted">
                  Administrator: <%=user%>
                </div>
              </div>
          </form>
        </div>
      </div>
  </div>
    

 



  <%- include('./partials/footer.ejs') %>
</body>
</html>

